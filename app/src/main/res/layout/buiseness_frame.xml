<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backpic"
    android:layout_gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/buisimages" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/fl_name"
        android:layout_width="362dp"
        android:layout_height="37dp"
        android:layout_margin="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.879">

        <LinearLayout
            android:id="@+id/linearName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2sp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Buiseness Frame"
                android:layout_gravity="center"
                android:textColor="@color/black_1000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_name_close"
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
            android:elevation="1dp"
            android:src="@drawable/ic_remove"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/teal_600"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <!--calla and number-->

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="23dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">


            <!--address-->


            <LinearLayout
                android:id="@+id/linearLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_width="6sp"
                    android:layout_height="6sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1px"
                    android:background="@drawable/ic_address"
                    android:backgroundTint="@color/black_1000" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:ellipsize="end"
                    android:text="City Avenue, Wakad, Mumbai-Bengluru Highway"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="5sp" />
            </LinearLayout>


            <!--call-->

            <LinearLayout
                android:id="@+id/linearPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="6sp"
                    android:layout_height="6sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1px"
                    android:background="@drawable/call"
                    android:backgroundTint="@color/black_1000" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="  +911234567890"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="6sp" />
            </LinearLayout>


        </LinearLayout>



        <!--mail and website-->

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="23dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <!--website-->


            <LinearLayout
                android:id="@+id/linearWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_website"
                    android:backgroundTint="@color/black_1000"
                    android:layout_width="6sp"
                    android:layout_height="6sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2sp"
                    android:layout_marginTop="1px"
                    android:background="@drawable/earth" />

                <TextView
                    android:id="@+id/tv_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="www.google.com"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="6sp" />
            </LinearLayout>


            <!--mail-->

            <LinearLayout
                android:id="@+id/linearEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="3dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivEmail"
                    android:layout_width="6sp"
                    android:layout_height="6sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2sp"
                    android:layout_marginTop="1px"
                    android:background="@drawable/ic_mail" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="demo@gmail.com"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="6sp" />
            </LinearLayout>


        </LinearLayout>



        <!--social icon-->


        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
            app:layout_constraintHorizontal_bias="0.832"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bfacebook"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/facebook"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/binsta"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/insta" />

            <ImageView
                android:id="@+id/btwitter"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/profile_background"
                android:src="@drawable/twitter" />

        </LinearLayout>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>