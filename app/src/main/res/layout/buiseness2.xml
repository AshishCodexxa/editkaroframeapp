<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="420dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:background="@color/green_100">



        <TextView
            android:id="@+id/bname"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Hiii"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:fontWeight="700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.801"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.053">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/buisimages"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.464"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.206" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/purple_200"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

<!--calla and number-->

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="23dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">


<!--address-->


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="120dp"
                    android:layout_height="10dp">


                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="2dp"
                        android:src="@drawable/location" />

                    <TextView
                        android:id="@+id/baddress"
                        android:layout_width="105dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_vertical"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:textSize="8sp"
                        app:fontWeight="500"
                        tools:layout_editor_absoluteX="12dp"
                        tools:layout_editor_absoluteY="309dp" />

                </LinearLayout>


<!--call-->

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="2.5dp">


                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:elevation="2dp"
                        android:src="@drawable/call" />

                    <TextView
                        android:id="@+id/bnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1234567890"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="8dp" />

                </LinearLayout>


            </LinearLayout>



<!--mail and website-->

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="23dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical">

<!--website-->


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="10dp">


                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:elevation="2dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/earth" />

                    <TextView
                        android:id="@+id/bwebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="www.editkaro.com"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="8dp" />

                </LinearLayout>


<!--mail-->

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="2dp">


                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:elevation="2dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/mail" />


                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="start"
                        android:text="www@gmail.com"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="8sp" />

                </LinearLayout>


            </LinearLayout>



<!--social icon-->


            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
                app:layout_constraintHorizontal_bias="0.832"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/bfacebook"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/profile_background"
                    android:src="@drawable/facebook"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/binsta"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_background"
                    android:src="@drawable/insta" />

                <ImageView
                    android:id="@+id/btwitter"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/profile_background"
                    android:src="@drawable/twitter" />

            </LinearLayout>





        </LinearLayout>

















    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>


