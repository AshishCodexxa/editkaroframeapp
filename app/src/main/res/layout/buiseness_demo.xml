<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameNew"
    android:layout_width="wrap_content"
    android:layout_height="300dp">

    <ImageView
        android:id="@+id/iv_frame_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <FrameLayout
        android:id="@+id/fl_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linearLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5sp"
            android:layout_marginBottom="5sp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="bottom"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_logo_close"
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
            android:elevation="1dp"
            android:src="@drawable/ic_remove"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_name"
        android:layout_width="17dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp">

        <LinearLayout
            android:id="@+id/linearName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/black_1000"
                android:textSize="8sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_name_close"
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
            android:elevation="1dp"
            android:src="@drawable/ic_remove"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8sp"
        android:layout_gravity="bottom|center_vertical|center_horizontal|center"
        android:layout_marginLeft="1sp"
        android:layout_marginBottom="25sp"
        android:elevation="1dp"
        android:src="@drawable/insta"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left|center_vertical|center_horizontal|center"
        android:layout_marginLeft="45sp"
        android:layout_marginBottom="5sp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="6sp"
                        android:layout_height="6sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="1px"
                        android:background="@drawable/call"
                        android:backgroundTint="@color/black_1000" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1sp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="+911234567890"
                        android:maxLines="1"
                        android:textColor="@color/black_1000"
                        android:textSize="7sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_phone_close"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/ic_remove"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivEmail"
                        android:backgroundTint="@color/black_1000"
                        android:layout_width="6sp"
                        android:layout_height="6sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2sp"
                        android:layout_marginTop="1px"
                        android:background="@drawable/mail" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1sp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="demo@gmail.com"
                        android:maxLines="1"
                        android:textColor="@color/black_1000"
                        android:textSize="6sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_email_close"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/ic_remove"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_website"
                        android:backgroundTint="@color/black_1000"
                        android:layout_width="6sp"
                        android:layout_height="6sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2sp"
                        android:layout_marginTop="1px"
                        android:background="@drawable/earth" />

                    <TextView
                        android:id="@+id/tv_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1sp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="www.google.com"
                        android:maxLines="1"
                        android:textColor="@color/black_1000"
                        android:textSize="6sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_website_close"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/ic_remove"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_address"
                        android:layout_width="6sp"
                        android:layout_height="6sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="1px"
                        android:background="@drawable/ic_address"
                        android:backgroundTint="@color/black_1000" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1sp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:textColor="@color/black_1000"
                        android:textSize="6sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_address_close"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/ic_remove"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
