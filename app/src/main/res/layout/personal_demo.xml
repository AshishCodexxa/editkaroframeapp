<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:sweet="http://schemas.android.com/apk/res-auto"
        android:id="@+id/frameNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="layout/personal_frame_1_0">

        <FrameLayout
            android:id="@+id/fl_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3sp">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginStart="3sp"
                    android:layout_marginTop="10sp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_logo_close"
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:elevation="1dp"
                android:src="@drawable/ic_remove"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6sp"
            android:background="#ffc107" />

        <FrameLayout
            android:id="@+id/fl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_vertical|center_horizontal|center"
            android:layout_marginTop="4sp"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="#2a9a01"
            android:paddingHorizontal="5sp"
            android:paddingVertical="1sp"
            android:paddingLeft="5sp"
            android:paddingTop="1sp"
            android:paddingRight="5sp"
            android:paddingBottom="1sp">

            <LinearLayout
                android:id="@+id/linearName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name_personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3sp"
                    android:layout_marginLeft="3sp"
                    android:layout_marginRight="3sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="iam"
                    android:textColor="@color/al_white"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_name_close"
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:elevation="1dp"
                android:src="@drawable/ic_remove"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical|center_horizontal|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start"
                android:background="@drawable/btn_rounded"
                android:gravity="left|center_vertical|center_horizontal|center|start"
                android:orientation="horizontal"
                android:paddingStart="10sp"
                android:paddingTop="2sp"
                android:paddingEnd="10sp"
                android:paddingBottom="2sp">

                <FrameLayout
                    android:id="@+id/fl_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1sp"
                    android:layout_marginEnd="3sp">

                    <LinearLayout
                        android:id="@+id/linearWebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_website"
                            android:layout_width="10sp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/insta" />

                        <TextView
                            android:id="@+id/tv_instausername_personal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2sp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="sakhir2033"
                            android:textColor="@color/al_white"
                            android:textSize="7sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_website_close"
                        android:layout_width="5sp"
                        android:layout_height="5sp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/iv_phone_personal"
                            android:layout_width="10sp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="3sp"
                            android:src="@drawable/facebook" />

                        <TextView
                            android:id="@+id/tv_facebookusername_personal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2sp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="sangharsh"
                            android:textColor="@color/al_white"
                            android:textSize="7sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_phone_close"
                        android:layout_width="5sp"
                        android:layout_height="5sp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_address"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#ffc107"
                android:paddingTop="2sp"
                android:paddingBottom="2sp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linearAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_address"
                        android:layout_width="10sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="2sp"
                        android:src="@drawable/ic_mail"
                        sweet:tint="@color/al_white" />

                    <TextView
                        android:id="@+id/tv_email_personal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2sp"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:maxLines="1"
                        android:text="84 Vivekananda Park, Sardar Nagar"
                        android:textColor="@color/al_white"
                        android:textSize="7sp" />


                    <TextView
                        android:drawableStart="@drawable/call"
                        android:id="@+id/tv_mobile_personal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2sp"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:maxLines="1"
                        android:text="676767"
                        android:textColor="@color/al_white"
                        android:textSize="7sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_address_close"
                    android:layout_width="5sp"
                    android:layout_height="5sp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/ic_remove"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
