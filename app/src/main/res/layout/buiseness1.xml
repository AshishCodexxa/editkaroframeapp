<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="420dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:background="@color/white"
        >


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/buisimages"
            android:background="@drawable/profile_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.009" />

        <!-- <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/contact_background"
            android:gravity="center"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:fontWeight="700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.116"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>-->
        <TextView
            android:id="@+id/bname"
            android:layout_width="135dp"
            android:layout_height="76dp"
            android:layout_marginTop="192dp"
            android:gravity="center"
            android:text="Hiii"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:fontWeight="700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.036"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="191dp"
            android:layout_height="47dp"
            android:layout_marginTop="280dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >


            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:elevation="2dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/baddress"
                android:layout_width="191dp"
                android:layout_height="47dp"
                android:layout_marginLeft="3dp"
                android:text="Addressdygqwygdyuqwgyqwgyuwgsuqwgugqyssyuwgsyugywgsugqyusgqwqyg"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textAlignment="textStart"
                app:fontWeight="500"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="340dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:elevation="2dp"
                android:src="@drawable/call" />

            <TextView
                android:id="@+id/bnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1234567890"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="10dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="360dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:elevation="2dp"
                android:src="@drawable/earth" />
            <TextView
                android:id="@+id/bwebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:text="www.editkaro.com"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="10dp" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginTop="356dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:elevation="2dp"
                android:src="@drawable/mail" />


        <TextView
            android:id="@+id/bmail"
            android:layout_width="130dp"
            android:layout_height="15dp"
            android:layout_marginLeft="3dp"
            android:textSize="10sp"
            android:textFontWeight="400"
            android:text="www@gmail.com"
            android:gravity="start"
            android:textColor="@color/black" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="375dp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.855"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bfacebook"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/profile_background"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/facebook"/>

            <ImageView
                android:id="@+id/binsta"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/insta"
                android:layout_marginLeft="10dp"
                android:background="@drawable/profile_background"/>

            <ImageView
                android:id="@+id/btwitter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/twitter"
                android:layout_marginLeft="10dp"
                android:background="@drawable/profile_background"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>